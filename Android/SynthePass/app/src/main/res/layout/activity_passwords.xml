<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passwords">

    <TableLayout
        android:id="@+id/pwTable"
        android:layout_width="match_parent"
        android:layout_height="508dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lineSpacingExtra="10sp"
                android:text="@string/appTitle"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pwTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="10sp"
                android:text="@string/pwTitle"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/cheapSpace"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/savebutton"
                android:contentDescription="@string/cheapSpace" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/appOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textShortMessage"
                android:hint="@string/hintApp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                 />

            <EditText
                android:id="@+id/pwOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textShortMessage"
                android:hint="@string/hintPass"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                 />

            <ImageButton
                android:id="@+id/saveOne"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/savebutton"
                android:contentDescription="@string/saveOne" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/appTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintApp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

            <EditText
                android:id="@+id/pwTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintPass"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

            <ImageButton
                android:id="@+id/saveTwo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/savebutton"
                android:contentDescription="@string/saveTwo" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/appThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintApp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

            <EditText
                android:id="@+id/pwThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintPass"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

            <ImageButton
                android:id="@+id/saveThree"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/savebutton"
                android:contentDescription="@string/saveThree" />

        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/appFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintApp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"
                />

            <EditText
                android:id="@+id/pwFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintPass"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"
                />

            <ImageButton
                android:id="@+id/saveFour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/savebutton"
                android:contentDescription="@string/saveFour" />

        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/appFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintApp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

            <EditText
                android:id="@+id/pwFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hintPass"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:importantForAutofill="no"
                tools:targetApi="o"
                />

            <ImageButton
                android:id="@+id/saveFive"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/savebutton"
                android:contentDescription="@string/saveFive" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/loButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="17dp"
        android:background="@color/colorPrimaryLight"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="@string/loButton"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/retPassButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="46dp"
        android:background="@color/colorPrimaryLight"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="@string/retPassButton"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/pwTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toEndOf="@+id/pwTable"
        app:layout_constraintTop_toBottomOf="@+id/loButton"
        app:layout_constraintVertical_bias="0.013" />

</android.support.constraint.ConstraintLayout>